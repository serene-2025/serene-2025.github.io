<body>
    <header>
        <h1>ข้อมูลสมาชิก</h1>
    </header>

    <!-- Profile Section -->
    <div id="profile" style="display: none;">
        <img id="profileImage" src="" alt="Profile Image">
        <p id="lineDisplayName"></p>
        <p id="name"></p>
        <p id="name1"></p>
        <p id="room"></p>
        <p id="name2"></p>
        <p id="name3"></p>
        <p id="phone"></p>
        <p id="name4"></p>
        <p id="name5"></p>
    </div>

    <!-- Section to display invoice information -->
    <div id="invoiceInfo" style="display: none;">
        <h3>ข้อมูลใบแจ้งหนี้</h3>
        <div id="invoiceCardsContainer" class="invoice-cards-container"></div>
    </div>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function initLiff() {
            // Show loading SweetAlert
            Swal.fire({
                title: 'กำลังโหลด...',
                text: 'กรุณารอสักครู่',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            await liff.init({ liffId: "2000143615-D9GLpGqy" }); // Replace YOUR_LIFF_ID_HERE with your actual LIFF ID
            if (liff.isLoggedIn()) {
                const profile = await liff.getProfile();
                const userId = profile.userId;

                // Fetch tenant info
                fetch('https://script.google.com/macros/s/AKfycbxJPZzU2epM28NpDuvqJqLGbmHBo-Ga5UlEwtLoB94_fx5sZ7ht2HhM70p8LXPmzzb0eA/exec?action=getTenantInfo&userId=' + userId) // Replace YOUR_SCRIPT_ID_HERE with your actual Script ID
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Display profile info
                        document.getElementById('profileImage').src = data.profileImageUrl;
                        document.getElementById('lineDisplayName').textContent = "ชื่อไลน์ : " + data.lineDisplayName;
                        document.getElementById('name').textContent = "ชื่อ-สกุล : " + data.name;
                        document.getElementById('name1').textContent = "บ้านเลขที่ : " + data.name1;
                        document.getElementById('room').textContent = "ซอย : " + data.room;
                        document.getElementById('name2').textContent = "การอยู่ : " + data.name2;
                        document.getElementById('name3').textContent = "สมาชิก : " + data.name3;
                        document.getElementById('phone').textContent = "เบอร์โทร : " + data.phone;
                        document.getElementById('name4').textContent = "Email : " + data.name4;
                        document.getElementById('name5').textContent = "IDLine : " + data.name5;
                        document.getElementById('profile').style.display = 'block';

                        // Fetch and display invoice data
                        fetchInvoiceData(userId);

                        // Close the loading SweetAlert
                        Swal.close();
                    } else {
                        Swal.close();
                        window.location.href = 'index.html';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.close();
                    window.location.href = 'index.html';
                });
            } else {
                liff.login();
                Swal.close();
            }
        }

        // Fetch invoice data based on userId
        function fetchInvoiceData(userId) {
            fetch('https://script.google.com/macros/s/AKfycbxJPZzU2epM28NpDuvqJqLGbmHBo-Ga5UlEwtLoB94_fx5sZ7ht2HhM70p8LXPmzzb0eA/exec?action=getInvoiceData&userId=' + userId) // Replace YOUR_SCRIPT_ID_HERE with your actual Script ID
            .then(response => response.json())
            .then(invoiceData => {
                if (invoiceData.success) {
                    const cardsContainer = document.getElementById('invoiceCardsContainer');
                    cardsContainer.innerHTML = ''; // Clear previous cards

                    // Sort invoices by timestamp in descending order (from latest to oldest)
                    invoiceData.invoices.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));

                    invoiceData.invoices.forEach(invoice => {
                        const card = document.createElement('div');
                        card.className = 'invoiceCard';

                        // Apply color based on status
                        let statusText = '';
                        if (invoice.status === 'รอการชำระ') {
                            statusText = `สถานะ: <span style="color: orange;">${invoice.status}</span>`;
                        } else if (invoice.status === 'ชำระแล้ว') {
                            statusText = `สถานะ: <span style="color: green;">${invoice.status}</span>`;
                        } else {
                            statusText = `สถานะ: ${invoice.status}`;
                        }

                        card.innerHTML = `
                            <h4>NO. ${invoice.no}</h4>
                            <p>Timestamp: ${invoice.timestamp}</p>
                            <p>UserID: ${invoice.userId}</p>
                            <p>ชื่อ: ${invoice.name}</p>
                            <p>เบอร์โทร: ${invoice.phone}</p>
                            <p>บ้านเลขที่: ${invoice.houseNumber}</p>
                            <p>เดือน: ${invoice.month}</p>
                            <p>ปี: ${invoice.year}</p>
                            <p>ค่าส่วนกลาง: ${invoice.commonAreaFee}</p>
                            <p>อื่นๆ: ${invoice.otherCosts}</p>
                            <p>ยอดรวม: ${invoice.totalAmount}</p>
                            <p>${statusText}</p>
                        `;

                        cardsContainer.appendChild(card);
                    });
                    document.getElementById('invoiceInfo').style.display = 'block';
                } else {
                    console.log("No invoice data available");
                }
            })
            .catch(error => {
                console.error('Error fetching invoice data:', error);
            });
        }

        initLiff();
    </script>
</body>
</html>
