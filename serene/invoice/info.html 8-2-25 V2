        async function initLiff() {
            Swal.fire({
                title: '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...',
                text: '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏£‡∏≠‡∏™‡∏±‡∏Å‡∏Ñ‡∏£‡∏π‡πà',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            await liff.init({ liffId: "2000143615-D9GLpGqy" });
            if (liff.isLoggedIn()) {
                const profile = await liff.getProfile();
                const userId = profile.userId;

                fetch('https://script.google.com/macros/s/AKfycbxJPZzU2epM28NpDuvqJqLGbmHBo-Ga5UlEwtLoB94_fx5sZ7ht2HhM70p8LXPmzzb0eA/exec?action=getTenantInfo&userId=' + userId)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('profileImage').src = data.profileImageUrl;
                        document.getElementById('displayName').textContent = "‡∏ä‡∏∑‡πà‡∏≠ : " + data.name0;
                        document.getElementById('name1').textContent = "‡∏ö‡πâ‡∏≤‡∏ô‡πÄ‡∏•‡∏Ç‡∏ó‡∏µ‡πà : " + data.name1;
                        document.getElementById('room').textContent = "‡∏ã‡∏≠‡∏¢ : " + data.room;

                        let phoneNumber = data.phone;
                        phoneNumber = phoneNumber.toString().padStart(10, '0');
                        document.getElementById('phone').textContent = "‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£ : " + phoneNumber;
                        document.getElementById('profile').style.display = 'block';

                        fetchInvoiceData(data.name1);
                        Swal.close();
                    } else {
                        Swal.close();
                        window.location.href = 'index.html';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.close();
                    window.location.href = 'index.html';
                });
            } else {
                liff.login();
                Swal.close();
            }
        }

        function getStatusText(status) {
            let color = '';
            if (status === '‡∏•‡πà‡∏ß‡∏á‡∏´‡∏ô‡πâ‡∏≤') color = 'orange';
            else if (status === '‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß') color = 'green';
            else if (status === '‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏à‡πà‡∏≤‡∏¢') color = 'red';
            else if (status === '‡πÑ‡∏°‡πà‡πÄ‡∏Å‡πá‡∏ö') color = 'Purple';
            else if (status === '‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡πÅ‡∏≠‡∏î‡∏°‡∏¥‡∏ô') color = 'blue';
            else if (status === '‡∏£‡∏≠‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•' || status === 'Nodata') color = 'Fuchsia';
            return `<span style="color: ${color};">${status}</span>`;
        }

        function fetchInvoiceData(name1) {
            fetch('https://script.google.com/macros/s/AKfycbxJPZzU2epM28NpDuvqJqLGbmHBo-Ga5UlEwtLoB94_fx5sZ7ht2HhM70p8LXPmzzb0eA/exec?action=getInvoiceData&name1=' + name1)
            .then(response => response.json())
            .then(invoiceData => {
                if (invoiceData.success) {
                    const cardsContainer = document.getElementById('invoiceCardsContainer');
                    cardsContainer.innerHTML = '';

                    invoiceData.invoices.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));

                    invoiceData.invoices.forEach(invoice => {
                        const card = document.createElement('div');
                        card.className = 'invoiceCard';

                        let statusText = '';
                        if (invoice.status === '‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏ä‡∏≥‡∏£‡∏∞') statusText = `‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ : <span style="color: orange;">${invoice.status}</span>`;
                        else if (invoice.status === '‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏à‡πà‡∏≤‡∏¢ ‡∏™‡∏¥‡∏á‡∏´‡∏≤‡∏Ñ‡∏° 67') statusText = `‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ : <span style="color: green;">${invoice.status}</span>`;
                        else if (invoice.status === '‡∏Ñ‡πâ‡∏≤‡∏á‡∏ä‡∏≥‡∏£‡∏∞') statusText = `‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ : <span style="color: red;">${invoice.status}</span>`;
                        else if (invoice.status === '‡∏£‡∏≠‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö') statusText = `‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ : <span style="color: Purple;">${invoice.status}</span>`;
                        else if (invoice.status === '‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡πÅ‡∏≠‡∏î‡∏°‡∏¥‡∏ô') statusText = `‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ : <span style="color: blue;">${invoice.status}</span>`;
                        else statusText = `‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ : ${invoice.status}`;

                        card.innerHTML = `
                            <h4>üßæ ${invoice.no} / ${invoice.year}</h4>
                            <p>üßñ ‡∏ä‡∏∑‡πà‡∏≠-‡∏™‡∏Å‡∏∏‡∏• : ${invoice.name0}</p>
                            <p>üè° ‡∏ö‡πâ‡∏≤‡∏ô‡πÄ‡∏•‡∏Ç‡∏ó‡∏µ‡πà : ${invoice.name1}</p>
                            <p>üè° ‡∏ã‡∏≠‡∏¢ : ${invoice.room}</p>
                            <p>üìÜ ‡∏õ‡∏µ : ${invoice.year}</p>
                            <p>üóì ‡∏°‡∏Å‡∏£‡∏≤‡∏Ñ‡∏° : ${getStatusText(invoice.month1)}</p>
                            <p>üóì ‡∏Å‡∏∏‡∏°‡∏†‡∏≤‡∏û‡∏±‡∏ô‡∏ò‡πå : ${getStatusText(invoice.month2)}</p>
                            <p>üóì ‡∏°‡∏µ‡∏ô‡∏≤‡∏Ñ‡∏° : ${getStatusText(invoice.month3)}</p>
                            <p>üóì ‡πÄ‡∏°‡∏©‡∏≤‡∏¢‡∏ô : ${getStatusText(invoice.month4)}</p>
                            <p>üóì ‡∏û‡∏§‡∏©‡∏†‡∏≤‡∏Ñ‡∏° : ${getStatusText(invoice.month5)}</p>
                            <p>üóì ‡∏°‡∏¥‡∏ñ‡∏∏‡∏ô‡∏≤‡∏¢‡∏ô : ${getStatusText(invoice.month6)}</p>
                            <p>üóì ‡∏Å‡∏£‡∏Å‡∏é‡∏≤‡∏Ñ‡∏° : ${getStatusText(invoice.month7)}</p>
                            <p>üóì ‡∏™‡∏¥‡∏á‡∏´‡∏≤‡∏Ñ‡∏° : ${getStatusText(invoice.month8)}</p>
                            <p>üóì ‡∏Å‡∏±‡∏ô‡∏¢‡∏≤‡∏¢‡∏ô : ${getStatusText(invoice.month9)}</p>
                            <p>üóì ‡∏ï‡∏∏‡∏•‡∏≤‡∏Ñ‡∏° : ${getStatusText(invoice.month10)}</p>
                            <p>üóì ‡∏û‡∏§‡∏®‡∏à‡∏¥‡∏Å‡∏≤‡∏¢‡∏ô : ${getStatusText(invoice.month11)}</p>
                            <p>üóì ‡∏ò‡∏±‡∏ô‡∏ß‡∏≤‡∏Ñ‡∏° : ${getStatusText(invoice.month12)}</p>
                            <h5>${statusText}</h5>
                        `;

                        cardsContainer.appendChild(card);
                    });
                    document.getElementById('invoiceInfo').style.display = 'block';
